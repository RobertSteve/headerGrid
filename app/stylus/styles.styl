.header    
    flex-direction column
    padding 25px 20px 20px 20px
    @media screen and (max-width: 768px) 
        padding 10px
    .date_sbs
        margin-bottom 15px
        font-size 16px 
        color #717e91
        font-weight 400
        .from_sbs
            font-weight 400
            color #454d6b
            &::before
                content "•"
                margin-right 5px
    .info_sbs
        display flex
        justify-content space-between
        color #454d6b
        font-size 26px
        margin-bottom 10px
        font-weight 300
        @media screen and (max-width: 768px) 
            margin-bottom 5px
        .title
            @media screen and (max-width: 768px) 
                font-size 18px
                color #454d6b
        .count-sbs
            display flex
            .offerts_sbs
                font-size 20px
                color #717e91
                font-weight 300
    .rate_sbs
        display flex
        font-size 14px
        color  #717e91
        font-weight 400
        align-items center
        @media screen and (max-width: 768px) 
            flex-direction column
            align-items flex-start
        .ul_sbs
            list-style-type none
            overflow hidden
            padding 0
            margin 0
            li
                font-size 14px
                float left
        .rate_calf
            font-size 10px
            color #717e91
            font-weight 400
    &--mobile
        padding 0px 20px 20px 20px