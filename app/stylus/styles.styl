.headerPrimary
    display flex
    justify-content space-between
    padding 60px 20px 45px 20px
    width calc(100%-40px)
    font-size 28px
    color #454d6b
    @media screen and (max-width: 768px) 
        padding 10px
        width calc(100%-20px)
        font-size 14px
        background-color #5b638a
        color #ffffff
        align-items center
    .leftHeaderPrimary
        display flex
        @media screen and (max-width: 768px)
            align-items center
        .icon
            display none
            @media screen and (max-width: 768px)
                display block
        .contentLeftHeaderPrimary
            .hour
                font-weight: 700
    &--mobile
        font-size 14px
        padding 20px
        


